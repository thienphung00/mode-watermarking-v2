# Watermark Service Configuration
# Copy to .env and customize

# =============================================================================
# API Service Configuration
# =============================================================================

# Server settings
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=false

# GPU Worker connection
GPU_WORKER_URL=http://localhost:8001
GPU_WORKER_TIMEOUT=120.0

# Storage backend: "local" or "gcs"
STORAGE_BACKEND=local
STORAGE_PATH=./data/images

# GCS settings (if using gcs backend)
# GCS_BUCKET=my-watermark-bucket

# Key store
KEY_STORE_PATH=./data/keys.json

# Artifacts (optional - for pre-trained detection models)
ARTIFACTS_PATH=./data/artifacts
# LIKELIHOOD_PARAMS_PATH=/path/to/likelihood_params.json
# MASK_PATH=/path/to/mask.npy

# Security
# IMPORTANT: Change this in production!
ENCRYPTION_KEY=development-key-not-for-production

# =============================================================================
# GPU Worker Configuration
# =============================================================================

GPU_HOST=0.0.0.0
GPU_PORT=8001

# Model settings
MODEL_ID=runwayml/stable-diffusion-v1-5
DEVICE=cuda

# Set to true for testing without GPU
STUB_MODE=true

# =============================================================================
# GCP Deployment (optional)
# =============================================================================

# GCP_PROJECT_ID=my-project
# GCP_REGION=us-central1
# GCP_ZONE=us-central1-a
